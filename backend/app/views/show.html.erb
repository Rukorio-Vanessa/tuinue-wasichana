# show.html.erb

<h1><%= @charity.name %></h1>

<h2>Non-anonymous Donors and Their Donations</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.donor.name %></td>
        <td><%= donation.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
